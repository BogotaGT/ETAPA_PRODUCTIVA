<!-- admin/ver-aprendices.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Aprendiz - SENA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/admin-styles.css">
</head>
<body>
    <%- include('../partials/admin-header') %>

    <div class="container mt-4">
        <h2>Detalles del Aprendiz</h2>
        <div class="card">
            <div class="card-body">
                <% for (let key in aprendiz) { %>
                    <% if (key !== 'id') { %>
                        <p><strong><%= key.charAt(0).toUpperCase() + key.slice(1).replace(/([A-Z])/g, ' $1').trim() %>:</strong> 
                        <% if (key.toLowerCase().includes('fecha')) { %>
                            <%= new Date(aprendiz[key]).toLocaleDateString('es-CO', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                        <% } else { %>
                            <%= aprendiz[key] %>
                        <% } %>
                        </p>
                    <% } %>
                <% } %>
                <a href="/admin/listar-aprendices" class="btn btn-primary">Volver a la lista</a>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>